{
    "name": "nikservik/users",
    "description": "User authorization for Laravel",
    "keywords": [
        "nikservik",
        "laravel",
        "user-settings"
    ],
    "homepage": "https://github.com/nikservik/users",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Nikiforov",
            "email": "ser.nikiforov@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "illuminate/contracts": "^6.0|^7.0|^8.0",
        "illuminate/database": "^6.0|^7.0|^8.0",
        "illuminate/support": "^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^4.0|^5.17.1|^6.16",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Nikservik\\Users\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nikservik\\Users\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nikservik\\Users\\UsersServiceProvider"
            ]
        }
    },
    "prefer-stable": true
}
